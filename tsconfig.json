{
    "compilerOptions": {
      "allowUnreachableCode": false,
      "alwaysStrict": true,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
        "es2015",
        "dom"
      ],
      "module": "es2015",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "outDir": "dist",
      "pretty": true,
      "removeComments": false,
      "target": "es2017"
    },
    "files": [
      "src/index.ts"
    ]
  }